<%= form_with(model: sinopse) do |form| %>
  <% if sinopse.errors.any? %>
    <div style="color: red">
      <h2>Não foi possível salvar sinopse pois:</h2>

      <ul>
        <% sinopse.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <strong><%= sinopse.livro.nome %></strong>
    <%= form.hidden_field :livro_id %>
  </div>

  <div>
    <%= form.label :texto, style: "display: block" %>
    <%= form.text_area :texto, {class: "form-control", minlength: 20 , maxlength: 2000, rows: "4"} %>
  </div>

  <div class="my-4">
    <%= form.submit "Salvar sinopse", class: "btn btn-success" %>
  </div>
<% end %>
