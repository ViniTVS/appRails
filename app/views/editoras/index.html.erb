<p style="color: green"><%= notice %></p>

<% @title="Editoras" %>
<h1><%= @title %></h1>


<div id="editoras" class="row">
  <% @editoras.each do |editora| %>
    <div class="col-12 col-md-6 mt-4 px-3 d-flex flex-column justify-content-between">
      <div>
        <h3> <%= editora.nome %> </h3>
        <!-- lista livros do autor -->
        <strong> Livros:</strong>
        <div class="list-group">
          <% editora.livro.each do |livro| %>
            <a href="<%= livro_path(livro.id) %>" class="list-group-item list-group-item-action">
              <%= livro.nome %>
            </a>
          <% end %>
        </div>
      </div>
      <!-- botÃ£o para visualizar dados -->
      <div class="d-flex justify-content-end mt-2">
      <%= link_to "Ver editora", editora, {class: "btn btn-info"} %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Criar editora", new_editora_path, {class: "btn btn-success my-4"} %>
