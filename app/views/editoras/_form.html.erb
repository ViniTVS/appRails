<%= form_with(model: editora) do |form| %>
  <% if editora.errors.any? %>
    <div style="color: red">
      <h2>Não foi possível salvar editora pois:</h2>

      <ul>
        <% editora.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group my-2">
    <label class="input-group-text" for="<%= :nome %>">Nome</label>
    <%= form.text_field :nome, {class: "form-control"} %>
  </div>

  <div>
    <%= form.submit "Salvar editora", class: "btn btn-success mt-4"  %>
  </div>
<% end %>
